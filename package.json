{
  "name": "miquel-xarau-portfolio",
  "private": true,
  "description": "Design & Code",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "cross-env CYPRESS_SUPPORT=y gatsby develop",
    "dev": "gatsby develop -o",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.tsx --ignore-path .gitignore --fix",
    "format": "prettier --write content/**/*.yaml",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:ci": "cypress run --browser chrome --reporter junit --reporter-options 'mochaFile=results/cypress/result.xml'",
    "server:open": "start-server-and-test develop http://localhost:8000 cy:open",
    "server:run": "start-server-and-test develop http://localhost:8000 cy:run",
    "server:ci": "start-server-and-test develop http://localhost:8000 cy:run:ci",
    "test:compile": "tsc --project cypress/tsconfig.json",
    "test:compile:watch": "tsc --watch --project cypress/tsconfig.json",
    "test": "npm-run-all -s test:compile server:run",
    "test:watch": "npm-run-all -p test:compile:watch server:open",
    "test:ci": "npm-run-all -s test:compile server:ci"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "gatsby": "^5.13.7",
    "gatsby-cli": "^5.13.x",
    "gatsby-plugin-google-analytics": "^5.13.x",
    "gatsby-plugin-google-tagmanager": "^5.13.x",
    "gatsby-plugin-image": "^3.13.1",
    "gatsby-plugin-manifest": "^5.13.x",
    "gatsby-plugin-netlify": "^5.1.x",
    "gatsby-plugin-offline": "^6.13.x",
    "gatsby-plugin-page-progress": "^2.2.x",
    "gatsby-plugin-react-helmet": "^6.13.1",
    "gatsby-plugin-sharp": "^5.13.1",
    "gatsby-plugin-sitemap": "^6.13.x",
    "gatsby-plugin-styled-components": "^6.13.x",
    "gatsby-plugin-typescript": "^5.13.x",
    "gatsby-source-filesystem": "^5.13.1",
    "gatsby-transformer-sharp": "^5.13.1",
    "gatsby-transformer-yaml": "^5.13.x",
    "polished": "^4.3.x",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.x",
    "react-icons": "^5.3.0",
    "react-spring": "^9.7.4",
    "sharp": "^0.33.x",
    "styled-components": "^6.1.x",
    "styled-system": "^5.1.x",
    "typeface-work-sans": "^1.1.x",
    "typescript": "^5.5.x"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-helmet": "^6.1.x",
    "@types/styled-components": "^5.1.x",
    "@types/styled-system": "^5.1.x",
    "babel-plugin-styled-components": "^2.1.x",
    "cross-env": "^7.0.x",
    "cypress": "^13.13.x",
    "eslint": "^9.9.0",
    "npm-run-all": "^4.1.x",
    "prettier": "^3.3.x",
    "react-social-icons": "^6.18.x",
    "start-server-and-test": "^2.0.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MiquelXarau/portfolio-mxg"
  },
  "bugs": {
    "url": "https://github.com/MiquelXarau/portfolio-mxg/issues"
  }
}
