{
  "name": "miquel-xarau-portfolio",
  "private": true,
  "description": "Design & Code - Portfolio moderno y optimizado",
  "version": "2.0.0",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run clean && gatsby build",
    "clean": "gatsby clean",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "optimize:test": "node scripts/test-optimization.js",
    "optimize:setup": "./scripts/setup-optimization-deps.sh",
    "optimize:run": "node scripts/optimize-multimedia-2025.js",
    "optimize:check": "node -e \"const fs = require('fs'); const videos = fs.readdirSync('./content/projects', {recursive: true}).filter(f => f.endsWith('.mp4')).map(f => ({file: f, size: (fs.statSync(\\`./content/projects/\\${f}\\`).size / 1024 / 1024).toFixed(2) + 'MB'})); console.table(videos);\"",
    "optimize:full": "node scripts/run-optimization-complete.js",
    "optimize:auto": "node scripts/run-optimization-complete.js --auto",
    "optimize:verify": "node scripts/verify-optimization-setup.js",
    "dev": "gatsby develop -o",
    "clean-dev": "gatsby clean && npm run develop",
    "cleanup": "node scripts/cleanup.js",
    "analyze": "npm run build && npx gatsby-plugin-webpack-bundle-analyser-v2",
    "security-audit": "node scripts/security-audit.js",
    "security": "npm audit && npm run security-audit",
    "security-check": "node scripts/check-security-status.js",
    "false-positives": "node scripts/check-false-positives.js",
    "update-github": "node scripts/update-github-data.js",
    "deploy": "npm run build && npx netlify deploy --prod",
    "deploy-all": "node scripts/deploy-all.js",
    "commit-deploy": "git add . && git commit -m \"ðŸš€ AUTO DEPLOY: $(date +'%Y-%m-%d %H:%M')\" && git push origin master && npm run deploy",
    "quick-deploy": "npm run deploy-all",
    "optimize": "node scripts/auto-cleanup-2025.js && node scripts/cleanup-markdown-2025.js",
    "unify": "node scripts/unify-index-pages-2025.js"
  },
  "dependencies": {
    "gatsby": "5.13.7",
    "gatsby-plugin-google-gtag": "5.13.1",
    "gatsby-plugin-image": "3.13.1",
    "gatsby-plugin-manifest": "5.13.1",
    "gatsby-plugin-netlify": "^5.1.1",
    "gatsby-plugin-page-progress": "^2.2.1",
    "gatsby-plugin-sharp": "5.13.1",
    "gatsby-plugin-sitemap": "6.13.1",
    "gatsby-plugin-styled-components": "6.13.1",
    "gatsby-plugin-typescript": "5.13.1",
    "gatsby-source-filesystem": "5.13.1",
    "gatsby-transformer-remark": "^6.14.0",
    "gatsby-transformer-sharp": "5.13.1",
    "gatsby-transformer-yaml": "5.13.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-icons": "^4.12.0",
    "sharp": "0.32.6",
    "styled-components": "6.1.8",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@types/react": "18.2.79",
    "@types/react-helmet": "6.1.11",
    "@types/styled-components": "5.1.34",
    "babel-plugin-styled-components": "2.1.4",
    "puppeteer": "^24.10.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MiquelXarau/portfolio-mxg"
  },
  "bugs": {
    "url": "https://github.com/MiquelXarau/portfolio-mxg/issues"
  },
  "keywords": [
    "portfolio",
    "gatsby",
    "react",
    "typescript",
    "styled-components",
    "ux-ui-design",
    "frontend-development"
  ]
}