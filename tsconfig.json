{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/elements/*": ["src/elements/*"],
      "@/styles/*": ["src/styles/*"],
      "@/images/*": ["src/images/*"],
      "@/config/*": ["config/*"]
    }
  },
  "include": [
    "src/**/*",
    "gatsby-node.js",
    "gatsby-config.js",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "cypress/**/*"
  ]
}